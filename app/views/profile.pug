extends layout.pug

block content
  section.section.section--tall
    h2 My Profile
    form.form.container(action='/profile' method='post')
      span Username: 
        span= username
      br
      label.form__label(for='city') Full Name: 
      input.form__input(id='fullName', name='fullName', value= fullName)
      br
      label.form__label(for='city') City: 
      input.form__input(id='city', name='city', value= city)
      br
      label.form__label(for='state') State: 
      input.form__input(id='state', name='state', value= state)
      br
      label.form__label(for='password') Change Password: 
      input.form__input(id='password', name='password', type='password')
      span.form__message#passwordMessage
      br
      label.form__label(for='passwordCheck') Verify Password: 
      input.form__input(id='passwordCheck', name='passwordCheck', type='password')
      span.form__message#passwordCheckMessage
      br
      button.form__button#update-button(type="submit") Update Profile
      span.form__message= message

block scripts
  script(type='text/javascript', src='common/form-functions.js')